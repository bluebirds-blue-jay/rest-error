{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "inlineSourceMap": true,
    "types": ["mocha", "node"]
  },
  "exclude": [
    "node_modules",
    "./src/misc/map.ts"
  ]
}